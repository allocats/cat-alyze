config {
	compiler: clang
	build_dir: build/
	default_flags: -Wall -Wextra
}

target executable example {
	sources: src/main.c
	flags: -O3
	output: build/bin/example
}

target debug example_debug {
	sources: src/main.c
	flags: -O0 -g3 -fsanitize=address -Weverything
	output: build/debug/example_debug
}

target test example_tests {
	sources: tests/test_main.c
	flags: -g -Weverything
	output: build/tests/example_test
}
