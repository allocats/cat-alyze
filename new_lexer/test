config {
	compiler: clang
	build_dir: build/
	default_flags: -Wall -Wextra
}

target executable lexer {
	sources: src/main.c
	flags: -O3
	output: build/bin/lexer
}

target debug lexer_debug {
	sources: src/main.c
	flags: -O0 -g3 -fsanitize=address -Weverything
	output: build/debug/lexer_debug
}

target test lexer_tests{
	sources: tests/test_main.c
	flags: -g -Weverything
	output: build/tests/lexer_test
}
